{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "MockSocket": "Debug"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": false,
      "logfile": {
        "type": "File",
        "fileName": "logs/nlog-${shortdate}.log",
        "layout": "${time}|${uppercase:${level}}|${message} ${exception:format=toString}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${time}|${uppercase:${level}}|${message} ${exception:format=toString}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "finalMinLevel": "Info"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}