{
  "MockSocket": {
    "Tcp": {
      "Port": 9090,
      "HeartInterval": 45
    },
    "Udp": {
      "Port": 9090,
      "ExpireUdpTime": 30,
      "HeartInterval": 45
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": false,
      "logfile": {
        "type": "File",
        "fileName": "logs/nlog-${shortdate}.log",
        "layout": "${time}|${uppercase:${level}}|${message} ${exception:format=toString}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${date:format=HH\\:mm\\:ss.fff} ${level:uppercase=true} ${logger:shortName=True} ${message} ${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "finalMinLevel": "Error"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}