{
  "MockSocket": {
    "Tcp": {
      "Enable": false,
      "HeartInterval": 50,
      "MockServerAddress": "127.0.0.1",
      "MockServerPort": 9090,
      "RealServerPort": 3389,
      "AppServerPort": 10000
    },
    "Udp": {
      "Enable": true,
      "HeartInterval": 50,
      "MockServerAddress": "127.0.0.1",
      "MockServerPort": 9090,
      "RealServerPort": 3389,
      "AppServerPort": 10000
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": false,
      "logfile": {
        "type": "File",
        "fileName": "logs/nlog-${shortdate}.log",
        "layout": "${date:format=HH\\:mm\\:ss.fff} ${level:uppercase=true} ${logger:shortName=True} ${message} ${exception:format=ToString}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${date:format=HH\\:mm\\:ss.fff} ${level:uppercase=true} ${logger:shortName=True} ${message} ${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "finalMinLevel": "Error"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}